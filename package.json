{
  "name": "@mcp-base/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo run dev --filter=@mcp-base/api",
    "dev:web": "turbo run dev --filter=@mcp-base/web",
    "build": "turbo build",
    "build:api": "turbo run build --filter=@mcp-base/api",
    "build:web": "turbo run build --filter=@mcp-base/web",
    "deploy": "turbo run deploy",
    "deploy:api": "turbo run deploy --filter=@mcp-base/api",
    "lint": "pnpm exec biome check",
    "lint:fix": "pnpm exec biome check --fix",
    "deps:check": "npx taze major -f",
    "deps:check:repo": "turbo run deps:check",
    "deps:update": "npx taze major -f -w && pnpm install",
    "deps:update:repo": "npx taze major -f -w && turbo run deps:update:no-install && pnpm install",
    "generate:cloudflare:types": "turbo run generate:cloudflare:types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "turbo": "^2.7.5",
    "ultracite": "^7.0.12"
  },
  "packageManager": "pnpm@10.28.1"
}
