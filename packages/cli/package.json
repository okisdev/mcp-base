{
  "name": "mcp-base",
  "version": "0.0.1",
  "description": "MCP Base CLI",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mcp-base": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "prepublishOnly": "pnpm build",
    "deps:check": "npx taze major -f",
    "deps:update": "npx taze major -f -w && pnpm install",
    "deps:update:no-install": "npx taze major -f -w"
  },
  "keywords": [
    "mcp",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
