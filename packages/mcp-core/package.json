{
  "name": "@mcp-base/mcp-core",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "deps:check": "npx taze major -f",
    "deps:update": "npx taze major -f -w && pnpm install",
    "deps:update:no-install": "npx taze major -f -w"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
